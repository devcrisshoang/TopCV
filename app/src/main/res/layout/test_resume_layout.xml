<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/account_ic"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:contentDescription="Profile Picture" />

        <!-- Name -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOWARD ONG"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Job Title -->
        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial Analyst"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Contact Section -->
        <TextView
            android:id="@+id/contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Contact"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Contact Information -->
        <LinearLayout
            android:id="@+id/contact_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello@reallygreatsite.com"
                android:textColor="@android:color/black"
                android:drawableLeft="@android:drawable/ic_dialog_email"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+123-456-7890"
                android:textColor="@android:color/black"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Anywhere St, Any City"
                android:textColor="@android:color/black"
                android:drawableLeft="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.reallygreatsite.com"
                android:textColor="@android:color/black"
                android:drawableLeft="@android:drawable/ic_menu_compass"
                android:drawablePadding="8dp" />
        </LinearLayout>

        <!-- About Me Section -->
        <TextView
            android:id="@+id/about_me_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/about_me_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dedicated and detail-oriented Financial Analyst with 10 years of experience. Eager to apply proven-budget maximization skills..."
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Skills Section -->
        <TextView
            android:id="@+id/skills_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/skills_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Financial modeling and reporting"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Data mining and analysis"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Financial accounting"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Experience Section -->
        <TextView
            android:id="@+id/experience_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional Experience"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/experience_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ginyard International Co. | Financial Analyst (2020 – Present)\nKey responsibilities:\n- Analyze current and past financial data\n- Report financial performance..."
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Education Section -->
        <TextView
            android:id="@+id/education_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education Background"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/education_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Borcelle Business School\nMasters in Accounting (Completed 2016)\n\nLarana Business School\nCertificate in Financial Management, Financial Analysis, and Public Budgeting (Completed 2014)"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
